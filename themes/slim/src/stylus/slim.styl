@import 'jeet'

body
  font-family Merriweather, 'Hiragino Sans GB', 'Microsoft YaHei', 'WenQuanYi Micro Hei', Serif
  font-size 100%
  line-height 1.65
  letter-spacing .01rem

a
  color #0074d9
  text-decoration none

ahover
afocus
  text-decoration underline

h1, h2, h3, h4, h5, h6
  margin-bottom .5rem
  font-weight bold
  line-height 1.25
  color #333
  margin-top 1rem
  margin-bottom .5rem

h1
  font-size 2rem

h2
  font-size 1.5rem

h3
  font-size 1.25rem

h4, h5, h6
  font-size 1rem

p, ul, ol, dl
  margin-top 0
  margin-bottom 1rem

strong
  color #303030

dt
  font-weight bold

dd
  margin-bottom .5rem

hr
  border 0
  border-top 1px solid rgba(0,0,0,.2)
  display block
  width 150px
  margin 1.5rem 0

abbr
  font-size 85%
  font-weight bold
  color #555
  text-transform uppercase

abbr[title]
  cursor help
  border-bottom 1px dotted #e5e5e5

code
  font-family Monaco, Courier, monospace
  padding .25em .5em
  color #bf616a
  background-color #f9f9f9
  border-radius 3px
  font-size .9rem

pre
  display block
  margin-top 0
  margin-bottom 1rem
  padding 1rem
  line-height 1.4
  white-space pre
  white-space pre-wrap
  word-break break-all
  word-wrap break-word
  background-color #f9f9f9

pre code
  font-family Menlo, Monaco, Courier, monospace
  padding 0
  font-size 1rem
  color rgba(0,0,0,.7)
  background-color transparent

blockquote
  padding .5rem 1rem
  margin .8rem 0 .8rem -1.5rem
  color #7a7a7a
  border-left .3rem solid #e5e5e5

blockquote p:last-child
  margin-bottom 0

@media (min-width 30rem)
  blockquote
    padding-right 5rem
    padding-left 1.25rem



img
  display block
  margin 0 0 1rem
  border-radius 5px
  max-width 100%


/* Tables */
table
  margin-bottom 1rem
  width 100%
  border 1px solid #e5e5e5
  border-collapse collapse

td,
th
  padding .25rem .5rem
  border 1px solid #e5e5e5

tbody tr:nth-child(odd) td,
tbody tr:nth-child(odd) th
  background-color #f9f9f9



.container
  center(700px)

border-color     = #FFFFFF
bg-color         = #E1E4EF


.header
  position relative
  margin 3rem auto
.site-title
  font-size 1.5rem
  & a
    color #333

.nav
  position absolute
  top 0
  left -70px
  text-align right
.nav-btn
  display inline-block
  line-height 16px
  &.is-on
    .ci-burger
      background transparent
    .ci-burger::before
      transform rotate(45deg)
      top 0
    .ci-burger::after
      transform rotate(-45deg)
      bottom 0
    + .nav-list
      opacity 1
.nav-list
  list-style none
  font-size .8rem
  margin-top 1rem
  padding 0
  opacity 0
  transition all 0.2s

.ci
  box-sizing border-box
  display inline-block
  font-size inherit
  font-style normal
  font-weight normal
  line-height 1
  position relative
  vertical-align top
  &::before,
  &::after
    content ''
    display block
    position absolute
    box-sizing inherit
.ci-burger
  width 16px
  height 3px
  top 7px
  left 0
  background #333
  transition all 0.3s
  &::after
  &::before
    width 100%
    height 3px
    background #333
    left 0
    transition all 0.3s
  &::before
    top -6px
  &::after
    bottom -6px

.content
  margin-bottom 7rem
.post
  position relative
  margin-bottom 2rem
.post-title::after
  content ''
  display block
  border-top 1px solid #ccc
  width 100%
  position absolute
  top 30px
  left -30px
  z-index -1
.post-title a
  color #333
  background #fff
  line-height 60px
  background #fff
  position relative
  padding 0 14px
  margin-left -14px
  transition all 0.3s
  &::after,
  &::before
    content ''
    position absolute
    border 3px solid transparent
    top 13px
    transition all .3s
  &::before
    left -23px
    transform rotate(45deg)
  &::after
    transform rotate(225deg)
    right -23px
  &:hover::before
    border-top-color #ccc
    border-right-color #ccc
    left -3px
  &:hover::after
    border-top-color #ccc
    border-right-color #ccc
    right -3px
.post-date
  color #ccc
  font-size 14px
  position absolute
  top 45px
.post-content
  margin 2rem auto
footer
  color #ccc
  font-size 14px
  text-align center
  margin 2rem auto 1rem
  a
    color #666
